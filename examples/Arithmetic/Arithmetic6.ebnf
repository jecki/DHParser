# A variant of an Arithmetic-grammar

@drop = whitespace, strings

formulae = ~ expression { expression }

HIDE:expression = addition | subtraction | term
  addition    = term "+"~ expression
  subtraction = term "-"~ expression

HIDE:term       = multiplication | division | factor
  multiplication = factor "*"~ term
  division       = factor ":"~ term

HIDE:factor = group | number
  group  = "("~ expression ")"~
  number = /0/~ | /[1-9]/ { /[0-9]/ } ~


