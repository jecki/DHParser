{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MLW -> XML",
            "type": "shell",
            "command": "./MLWCompiler.py ${file}",
            "windows": {
                "command": "python MLWCompiler.py ${file}"
            },
            "problemMatcher": {
                "owner": "mlw",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(Warning|Error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            }
        }
    ]
}
